<%= form_tag "/colors", method: :get do %>
  <%= color_field_tag 'color', "", id:"jasmine", name:"the_color"%>
  <%= submit_tag "Find my palette" %>
<% end %>

<h3>Triad Palette</h3>
<div>
  <% @hex.palette.triad.each do |triad_color|%>
    <div style="background:<%= triad_color %>" class="box"><%= triad_color %></div>
  <% end %>
</div>
