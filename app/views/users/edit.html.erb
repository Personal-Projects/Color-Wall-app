<h3>Edit Profile Page</h3>

<%= form_tag("/users/#{@user.id}", method: :patch) do %>
    <div>
      <%= label_tag :first_name %>
      <%= text_field_tag :first_name, @user.first_name %>
    </div>
    <br>
    <div>
      <%= label_tag :last_name %>
      <%= text_field_tag :last_name, @user.last_name %>
    </div>
    <br>
    <div>
      <%= label_tag :email %>
      <%= email_field_tag :email, @user.email %>
    </div>
    <br>
    <div>
      <%= label_tag :user_name %>
      <%= text_field_tag :user_name, @user.user_name %>
    </div>
    <br>
    <div>
      <%= label_tag :birth_date %>
      <%= text_field_tag :birth_date, @user.birth_date %>
    </div>
    <br>
    <div>
      <%= label_tag :favorite_color %>
      <%= text_field_tag :favorite_color, @user.favorite_color %>
    </div>
    <br>
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password, @user.password %>
    </div>
    <br>
        <div>
      <%= label_tag :password %>
      <%= password_field_tag :password, @user.password_confirmation %>
    </div>
    <br>
    <p><%= submit_tag "Edit my profile" %></p>
  <% end %>
