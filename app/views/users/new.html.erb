<h1>Signup!</h1>
<%= form_tag '/users', method: :post do  %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>
  <br>
  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
  <br>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <br>
  <div>
    <%= label_tag :username %>
    <%= text_field_tag :user_name %>
  </div>
  <br>
  <div>
    <%= label_tag :birth_date %>
    <%= text_field_tag :birth_date %>
  </div>
  <br>
  <div>
    <%= label_tag :favorite_color %>
    <%= text_field_tag :favorite_color %>
  </div>
  <br>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <br>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password_confirmation %>
  </div>
  <br>
  <p><%= submit_tag "Signup!"%></p>
<% end %>

