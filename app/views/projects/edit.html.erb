<div class="left-container">
  <div class="main-container scroll-container">
    <div class="main-header">
      <h1>Edit Project</h1>
    </div>
    <div class="main-content-container">
      <%= form_tag "/projects/#{@project.id}", method: :patch do %>
        <div class="form-group"><label>Project Name: </label><input type="text" name="name" value="<%= @project.name %>"  class="form-control" required /></div>
        <div class="form-group"><label>Start Date: </label><input type="text" name="start_date" value="<%= @project.start_date %>"  class="form-control" required /></div>
        <div class="form-group"><label>Deadline: </label><input type="text" name="finish_date" value="<%= @project.finish_date %>"  class="form-control" required /></div>
        <div class="form-group"><label>Concept: </label><textarea name="concept" class="form-control" required><%= @project.concept %></textarea></div>
        <div class="form-group"><input type="submit" value="Edit" class="btn btn-default">
          <%= link_to "Delete", "/projects/#{@project.id}", {method: :delete, class: "btn btn-danger" } %>
        </div>
      <% end %>
    </div>
    <footer>
      <div class="footer-lower">
        <div class="row">
          <div class="col-sm-12">
            <div class="copyright">Copyright 2017. All rights reserved.</div>
          </div>
        </div>
      </div>
    </footer>
  </div>
</div>
