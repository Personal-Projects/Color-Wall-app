<div class="left-container">
  <div class="main-container scroll-container">
    <div class="blog-post-container">
      <div class="standard-post-box format-standard" style="background-image: url(/);"> 
        <div class="standard-post-box-content">
          <h2 class="standard-post-title"><a href="/colors" title="Start a new card"><center>Start a new card</center></a></h2>
        </div>
      </div>

      <!-- post start -->
      <% @cards.each do |card| %>
        <div class="list-post-box format-standard"> 
          <div class="list-post-left">
          <!-- post thumbnail -->

          </div>
          <div class="list-post-right">
            <h4 class="list-post-title"><a href="/cards/<%= card.id %>/edit" title="card"><%= card.name.capitalize %></a></h4>
            </div>
            <a href="/cards/<%= card.id %>/edit" class="btn more">View Card</a>
          </div>
      <% end %>
      <!-- post end -->

      <footer>
        <div class="footer-lower">
          <div class="row">
            <div class="col-sm-12">
              <div class="copyright">Copyright 2017. All rights reserved.</div>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
</div>
